@model Thoujour.Models.Thought

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this Thought?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2 fs-3">
                @Html.DisplayNameFor(model => model.Title):
            </dt>
            <dd class="col-sm-10 fs-3 text-decoration-underline">
                "@Html.DisplayFor(model => model.Title)"
